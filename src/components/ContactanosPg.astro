---
import CallCenter from '../../images/call-center.png'
import '../styles/ContactanosPg.css'
---

<div class="container contenedor-formulario">
    <div class="row">
        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
            <h2>Ponerse en contacto</h2>
            <p>
                You can contact us any way that is convenient for you. We are
                available 24/7 via fax or email. You can also use a quick
                contact form below or visit us personally. We would be happy to
                answer your questions.
            </p>
            <form action="https://formspree.io/f/xwkgvqkj" method="POST">

                <div class="py-2">
                    <label class="form-label" for="nombres">
                        Nombres
                    </label>
                    <input class="form-control" type="text" name="nombres" id="nombres" required />
                    
                </div>
                
                <div class="py-2">
                    <label class="form-label" for="apellidos">
                        Apellidos
                    </label>
                    <input class="form-control" type="text" name="apellidos" id="apellidos" required />
                    
                </div>
                
                <div class="py-2">
                    <label class="form-label" for="email" >
                        Email
                    </label>
                    <input class="form-control" type="email" name="email" id="email" required />
                </div>
                
                <div class="py-2">
                    <label class="form-label" for="telefono">
                        Tel√©fono
                    </label>
                    <input class="form-control" type="tel" name="telefono" id="telefono" required />
                </div>
                
                <div class="py-2">
                    <label for="mensaje">
                        Mensaje
                    </label>
                    <textarea class="form-control" name="mensaje" id="mensaje" required></textarea>
                </div>
                

                <!-- your other form fields go here -->
                <button  class="form-control py-2 btn btn-warning" type="submit">Enviar</button>
            </form>
        </div>

        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12">
            <img class="imagen-call-center" src={CallCenter.src} alt="Contactanos">
        </div>
    </div>
</div>
